<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">{{ 'italica.size.guide'|trans }}</h4>
      </div>
      <div class="modal-body">
        {% if size_guides|length == 0 %}
            <p>{{ 'italica.no.size.guide.found'|trans }}</p>
        {% else %}
            {% for size_guide in size_guides %}
                <h4 class="title"><span class="text">{{ size_guide.name|trans }} {{ size_guide.gender|trans }}</span> </h4>
                <table class="table table-striped table-hover">
                    <tbody>
                    <tr>
                        {% for field in size_guide.fields %}
                            <th>{{ field.name }}</th>
                        {% endfor %}
                    </tr>  
                        {% for row in size_guide.getValuesAsRows() %}
                            {% if row|length > 0 %} 
                            <tr>
                                {% for value in row %}
                                    <td>{{ value }}</td>
                                {% endfor %}
                            </tr>
                            {% endif %}
                        {% endfor %}
                     </tbody>
                </table>
            {% endfor %}
        {% endif %}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">{{ 'italica.close'|trans }}</button>
      </div>