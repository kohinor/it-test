{% if products|length > 0 %}
<h3 class="title"><span class="text">{{ 'italica.recently.viewed.products'|trans }}</span></h3>
<div class="row">
    {% for product in products %}
        {% if loop.index < 7 %}
            <div class="col-lg-2 col-md-4 col-sm-4 text-center col-lg-height col-lg-width col-bottom" > 
            {% include 'SyliusWebBundle:Frontend/Product:_singleBox.html.twig' with {'locale': locale } %}
            </div>
        {% endif %}
    {% endfor %}
    {% for key in [1,2,3,4,5,6] %}
        {% if key > products|length %}
            <div class="col-lg-2 col-md-4 col-sm-4 text-center col-lg-height col-lg-width col-bottom" ></div>
        {% endif %}
    {% endfor %}
</div>
{% endif %}