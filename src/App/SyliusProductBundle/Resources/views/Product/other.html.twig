<div class="other-products">
    {% for product in products %}
        <div class="col-lg-4"
        <a href="{{ path('app_site_product', {'_locale': locale, 'slug':product.slug}) }}">
        <img class="img-responsive pull-left thumbnail {% if slug == product.slug %} current{% endif %}" src="{{ product.image ? product.image.path|imagine_filter('sylius_small'): 'http://placehold.it/60x60' }}" alt="{{ product.name }}" />   
        </a>
        </div>
    {% endfor %}
</div>