{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Product:macros.html.twig' import list %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.product.group.index'|trans }}</a></li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ buttons.create(path('app_site_product_group_create'), 'sylius.product.group.create'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-th-list"></i> {{ 'sylius.product.group.index_header'|trans|raw }}</h1>
</div>
<form class="form-inline form-filter" action="" method="get" >
    <div class="form-group">
        <label class="sr-only control-label" for="criteria_name">Name</label>
        <input id="criteria_name" class="form-control" type="text" placeholder="Name" name="criteria[name]">
    </div>
    <button class="btn btn-primary" type="submit">
        <i class="glyphicon glyphicon-search"></i>
        Filter
    </button>
</form>

{{ pagination(groups) }}


{% if groups|length > 0 %}
<table class="sylius-products-table table table-bordered">
    <thead>
        <tr>
            <th class="id">{{ sylius_resource_sort('id', '#id') }}</th>
            <th class="info">{{ sylius_resource_sort('name', 'sylius.product.group.name'|trans) }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
        <tr id="{{ group.id }}">
            <td class="id">
                {{ group.id }}
            </td>
            <td class="info">
                <div class="media">
                    <div class="media-body">
                        <h5 class="media-heading">
                            <a class="name"
                               href="{{ path('app_site_product_group_view', {'id': group.id}) }}">
                                {{ group.name }}
                            </a>                           
                        </h5>
                        
                    </div>
                </div>
            </td>
            <td class="center-text">
                {{ buttons.edit(path('app_site_product_group_edit', {'id': group.id})) }}
                {{ buttons.delete(path('app_site_product_group_delete', {'id': group.id})) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.product.group.no_results'|trans) }}
{% endif %}

{{ pagination(groups) }}

{% endblock %}
