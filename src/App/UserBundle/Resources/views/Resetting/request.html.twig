{% extends "FOSUserBundle::layout.html.twig" %}

{% block breadcrumbs %} 
<ul class="breadcrumb">
    <li>{{ 'italica.you.are.here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'italica.home'|trans({}, 'messages') }}</a> </li>
    <li><a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans }}</a> </li>
</ul>
{% endblock %}

{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="col-lg-6">
<h4 class="title"><span class="text">{{ 'resetting.request.submit'|trans }}</span></h4>
    {% if invalid_username is defined %}
        <div class="alert alert-danger">
              <a class="close" data-dismiss="alert" href="#">Ã—</a>
              {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
      </div>
    {% endif %}
<form class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
  <fieldset>  
   <div class="form-group" >
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" />
        <button type="submit" class="btn btn-default btn-sm">{{ 'resetting.request.submit'|trans }}</button>
    </div>
  </fieldset>
</form>
</div>
<div class="col-lg-6">
    <div class="panel panel-custom">
        <div class="panel-body">
            <h4 class="title"><span class="text">{{ 'italica.reset.password.title'|trans({}, 'messages') }}</span></h4>
            <p>{{ 'italica.reset.password.instructions'|trans({}, 'messages') }}</p>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
