{% extends "FOSUserBundle::layout.html.twig" %}
{% block breadcrumbs %}
<ul class="breadcrumb">
    <li>{{ 'italica.you.are.here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'italica.home'|trans({}, 'messages') }}</a> </li>
    <li><a href="{{ path("fos_user_registration_register") }}">{{ 'italica.register'|trans({}, 'messages') }}</a> </li>
</ul>
{% endblock %}
{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="col-lg-5">
<form class="form-horizontal fos_user_registration_register" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" >
    <fieldset>
        <h4 class="title"><span class="text">{{ 'italica.registration'|trans({}, 'messages') }}</span></h4>
    <div class="form-group">
        {{ form_row(form.firstName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.lastName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.plainPassword) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-lg-9 col-lg-offset-3">
        <input type="hidden" name="_target_path" value="{{targetPath|default('')}}"/>
        <button type="submit" class="btn btn-default btn-sm">{{ 'registration.submit'|trans }}</button>
      </div>
    </div>
    </fieldset>
</form>
</div>
<div class="col-lg-1">
</div>
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-body"><p>{{ 'italica.required.fields'|trans({}, 'messages') }}</p></div>
    </div>
    <div class="panel panel-custom">
        <div class="panel-body">
            <h4 class="title"><span class="text">{{ 'italica.why.to.register'|trans({}, 'messages') }}</span></h4>
        <ul>
            <li><p>{{ 'italica.why.to.register.benefit1'|trans({}, 'messages') }}</p></li>
            <li><p>{{ 'italica.why.to.register.benefit2'|trans({}, 'messages') }}</p></li>
        </ul>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
