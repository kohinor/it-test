{% extends "FOSUserBundle::layout.html.twig" %}
{% block breadcrumbs %}
<div class="breadcrumbs">
<ul>
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> <a href="{{ path("fos_user_registration_register") }}">{{ 'Register'|trans({}, 'messages') }}</a> </li>
</ul>
</div>
{% endblock %}
{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="column grid-6">
    <h3>{{ 'Registration'|trans }}</h3>
<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <div class="clearfix">
        {{ form_row(form.firstName) }}
    </div>
    <div class="clearfix">
        {{ form_row(form.lastName) }}
    </div>
    <div class="clearfix">
        {{ form_row(form.email) }}
    </div>
    <div class="clearfix">
        {{ form_row(form.plainPassword) }}
    </div>
    {{ form_rest(form) }}
    <div class="clearfix">
        <input type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>
</div>
<div class="column grid-6">
    <div class="highlight">
        <p>{{ 'italica.required.fields'|trans({}, 'messages') }}</p>
    </div>
    <div class="highlight">
        <h3>{{ 'italica.why.to.register'|trans({}, 'messages') }}</h3>
        <ul>
            <li><p>{{ 'italica.why.to.register.benefit1'|trans({}, 'messages') }}</p></li>
            <li><p>{{ 'italica.why.to.register.benefit2'|trans({}, 'messages') }}</p></li>
        </ul>
    </div>
</div>

{% endblock fos_user_content %}
