{% extends "FOSUserBundle::layout.html.twig" %}
{% block breadcrumbs %}
<ul class="breadcrumb" style="margin-bottom: 0px;">
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> <a href="{{ path("fos_user_registration_register") }}">{{ 'Register'|trans({}, 'messages') }}</a> </li>
</ul>
{% endblock %}
{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}
<div class="col-lg-6">
<form class="form-horizontal" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
    <fieldset>
        <legend>{{ 'Registration'|trans }}</legend>
    <div class="form-group">
        {{ form_row(form.firstName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.lastName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.plainPassword) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
        <input type="hidden" name="_target_path" value="{{targetPath|default('')}}"/>
        <button type="submit" class="btn btn-primary">{{ 'registration.submit'|trans }}</button>
      </div>
    </div>
    </fieldset>
</form>
</div>
<div class="col-lg-6">
    <div class="panel panel-default">
        <div class="panel-body"><p>{{ 'italica.required.fields'|trans({}, 'messages') }}</p></div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body"><h3>{{ 'italica.why.to.register'|trans({}, 'messages') }}</h3>
        <ul>
            <li><p>{{ 'italica.why.to.register.benefit1'|trans({}, 'messages') }}</p></li>
            <li><p>{{ 'italica.why.to.register.benefit2'|trans({}, 'messages') }}</p></li>
        </ul>
        </div>
    </div>
</div>

{% endblock fos_user_content %}
