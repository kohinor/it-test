{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}
{% block breadcrumbs %}
{% trans_default_domain 'menu' %}
<ul class="breadcrumb">
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> <a href="{{ path("fos_user_change_password") }}">{{ 'sylius.frontend.menu.account.password'|trans }}</a> </li>
</ul>
{% endblock %}
{% block content %}
<div class="col-lg-12">
{% trans_default_domain 'FOSUserBundle' %}
<form class="form-horizontal" method="post" action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }}>
<fieldset>
<legend>{{'change.my.password'|trans }}</legend>
<div class="form-group"> 
        {{ form_row(form.current_password) }}
    </div>
<div class="form-group"> 
        {{ form_row(form.plainPassword) }}
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <input type="hidden" name="_target_path" value="{{targetPath|default('')}}"/>
        <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
      </div>
    </div>
</fieldset>
</form>
</div>

{% endblock content %}
