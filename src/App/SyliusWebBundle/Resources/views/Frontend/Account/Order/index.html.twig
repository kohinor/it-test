{% import 'SyliusWebBundle:Frontend/Macros:buttons.html.twig' as buttons %}
{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block breadcrumbs %}
<ul class="breadcrumb">
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> {{ 'sylius.account.order.list'|trans }} </li>
</ul>
{% endblock %}
{% block content %}
    <h4>{{ 'sylius.account.order.list'|trans }}</h4>

    <div class="column grid-8">
        
        {% if orders is not empty %}
        <table id="orders" class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>{{ 'sylius.account.order.state'|trans }}</th>
                    <th>{{ 'sylius.order.number'|trans }}</th>
                    <th>{{ 'sylius.order.total'|trans }}</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr class="order" id="order-{{ order.number }}">
                        <td>Placed: {{ order.createdAt|date('d M Y') }} <br/> {% include "SyliusWebBundle:Frontend/Account:Order/_state.html.twig" %}</td>
                        <td>{{ order.number }}</td>
                        <td>{{ order.total|sylius_money }}</td>
                        <td>
                            {% if order.isInvoiceAvailable %}
                            {{ buttons.btn(
                                    path('sylius_account_order_invoice', {'number': order.number}),
                                    '',
                                    'order-' ~ order.number ~ '-invoice',
                                    'file'
                            ) }}
                            {% endif %}
                            {{ buttons.show(path('sylius_account_order_show', {'number': order.number}), '', 'order-' ~ order.number ~ '-details') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
            <p>{{ 'sylius.account.order.empty'|trans }}</p>
        {% endif %}
    </div>
{% endblock %}
