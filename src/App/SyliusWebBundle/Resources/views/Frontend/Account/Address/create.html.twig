{% from 'SyliusWebBundle:Frontend/Macros:actions.html.twig' import create %}
{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {% javascripts output='assets/compiled/backend_province.js'
    'bundles/syliusweb/js/province-choices.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block breadcrumbs %}
<div class="breadcrumbs">
<ul>
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> {{ 'sylius.account.address.create'|trans }} </li>
</ul>
</div>
{% endblock %}
    
{% block content %}
    <h4>{{ 'sylius.account.address.create'|trans }}</h4>

    <div class="row">
        <div class="column grid-5">
        <form action="{{ path('sylius_account_address_create') }}" method="post" class="form-horizontal" novalidate>
            {% include 'SyliusWebBundle:Frontend/Address:_form.html.twig' %}
            {{ create() }}
        </form>
        </div>
    </div>
{% endblock %}
