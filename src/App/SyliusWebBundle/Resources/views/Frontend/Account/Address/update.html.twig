{% from 'SyliusWebBundle:Frontend/Macros:actions.html.twig' import update %}
{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block breadcrumbs %}
<div class="breadcrumbs">
<ul>
    <li>{{ 'You are here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'Home'|trans }}</a> </li>
    <li><i class="icon-triangle-right"></i> {{ 'sylius.account.address.update'|trans }} </li>
</ul>
</div>
{% endblock %}

{% block content %}
    <h4>{{ 'sylius.account.address.update'|trans }}</h4>

    <div class="row">
        <form action="{{ path('sylius_account_address_update', {'id': address.id}) }}" method="post" class="form-horizontal" novalidate>
            {% include 'SyliusWebBundle:Frontend/Address:_form.html.twig' %}
            {{ update() }}
        </form>
    </div>
{% endblock %}
