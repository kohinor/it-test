{% if product.hasVariants %}
    {% if product.isVariantSelectionMethodChoice %}
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for variant in product.variants if variant.available %}
                <tr>
                    <td>
                        {% if variant.presentation is empty %}
                        <ul class="unstyled">
                            {% for option in variant.options %}
                            <li><strong>{{ option.presentation|trans({}, 'messages') }}</strong>: {{ option.value|trans({}, 'messages') }}</li>
                            {% endfor %}
                        </ul>
                        {% else %}
                            {{ variant.presentation|trans({}, 'messages') }}
                        {% endif %}
                    </td>
                    <td>
                        <span class="label label-success">{{ sylius_calculate_price(variant)|sylius_price }}</span>
                    </td>
                    <td>
                    {% if sylius_inventory_is_available(variant) %}
                        {{ form_widget(form.variant[loop.index0]) }}
                    {% else %}
                        <span class="label label-warning">{{ 'sylius.out_of_stock'|trans({}, 'messages') }}</span>
                    {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
            {{ form_row(form.quantity, {'attr': {'class': 'center-text'}, 'empty_value': '1'}) }}
            {{ form_widget(form._token) }}
        {% else %}
        <div class="row">
        <div class="col-lg-8">
                {{ form_widget(form.variant) }}
                {{ form_row(form.quantity, {'attr': {'class': 'center-text'}, 'empty_value': '1'}) }}
                {{ form_widget(form._token) }}
        </div>
        <div class="col-lg-4">
                {% if gender and brand %}
                    <a href="javascript:void(0);" class="modal-show btn btn-default btn-sm"  data-toggle="modal" data-target="#myModal">Size Guide</a>
               {% endif %}
               <div id="product-stock" class="panel-body"></div>
        </div>
        </div>
        {% endif %}
{% endif %}

{% if not product.hasVariants and sylius_inventory_is_available(product.masterVariant) %}
        {{ form_row(form.quantity, {'attr': {'class': 'center-text'}, 'empty_value': '1'}) }}
        {{ form_widget(form._token) }}
{% endif %}