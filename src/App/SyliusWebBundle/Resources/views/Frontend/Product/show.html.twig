{% extends 'KitpagesCmsBundle:Page:layout.html.twig' %}

{% block keywords %}
    {{ product.translate(app.request.locale).metaKeywords|default(product.metaKeywords) }}
{% endblock %}

{% block description %}
    {{ product.translate(app.request.locale).metaDescription|default(product.metaDescription) }}
{% endblock %}

{% set form = sylius_cart_form({'product': product}) %}
{% set brand = 'unknown' %}
{% set gender = null %}
{% for taxon in product.taxons %}
    {% if taxon.name == 'Women' %}
        {% set gender = 'women' %}
    {% endif %}
    {% if taxon.name == 'Men' %}
        {% set gender = 'men' %}
    {% endif %}
    {% if taxon.parent.name == 'Brand' %}
        {% set brand = taxon.name %}
    {% endif %}
{% endfor %}

{% block title %}
    {{ brand }} | {{ product.translate(app.request.locale).name|default(product.name)|title }}
{% endblock %}
    
{% block breadcrumbs %}
    <div class="col-lg-10 col-md-10 col-sm-10">
    <ul class="breadcrumb">
    <li>{{ 'italica.you.are.here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'italica.home'|trans({}, 'messages') }}</a> </li>
    {% if gender %}
        <li><a href="{{ path('app_solr_search_gender', {'gender':gender}) }}">{{ gender|trans({}, 'messages')|title  }}</a> </li>
        <li><a href="{{ path('app_solr_search_gender_brand', {'gender':gender, 'brand':brand}) }}">{{ brand|trans({}, 'messages')|title  }} </a></li>
    {% else %}
        <li><a href="{{ path('app_solr_search_brand', {'brand':brand}) }}">{{ brand|trans({}, 'messages')|title  }} </a></li>
    {% endif %}
    <li>{{ product.translate(app.request.locale).name|default(product.name)|title  }} </li>
    </ul>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2" style="padding-top:5px;">
        <a href="javascript:void(0);" class="back">{{ 'italica.back.to.the.search'| trans({}, 'messages') }} <i class="fa fa-arrow-right"></i></a>
    </div>
{% endblock %}
{% block overlay %}
   {% if gender %}    
   {{ render(controller('AppSyliusProductBundle:SizeGuide:getSizeGuide', {'request': app.request, 'brand': brand, 'gender': gender} )) }}             
   {% endif %}
{% endblock %}
{% block body %}
<div class="row">
  <div class="col-lg-4">   
    <div class="row">
      <div class="col-lg-2 col-sm-2 col-md-2">
        {% if product.images|length > 0 %}
          <div class="tmb-caption">
            {% for image in product.images %}
              <div class="wp-caption">
                <img class="img-small thumbnail" src="{{ image.path|imagine_filter('sylius_small') }}" data-src="{{ image.path|imagine_filter('sylius_large') }}" data-tmb-large="{{ image.path|imagine_filter('sylius_x_large') }}" alt="{{ product.name }}" />
              </div>
            {% endfor %}
          </div>
        {% endif %}
      </div>
      <div class="col-lg-10 col-sm-10 col-md-10">
        <img class="img-large image-container" style="padding:0; margin:0;" src="{{ product.image ? product.image.path|imagine_filter('sylius_large'): 'http://placehold.it/200x200' }}" alt="{{ product.name }}" data-large="{{ product.image ? product.image.path|imagine_filter('sylius_x_large') : 'http://placehold.it/200x200' }}"/>   
      </div>
    </div>
    {% if product.getGroup() %}
      <div class="row">
        <div class="col-lg-12">
          <h4 class="title">
            <span class="text">{{ 'italica.other.options'|trans({}, 'messages') }}</span>
          </h4>
          {{ render(controller( 'AppSyliusProductBundle:Product:getProductsByGroup', {
            'request': app.request,
            'groupId': product.getGroup().id} )) }}
        </div>
      </div>   
    {% endif %}
  </div>    
  <div class="col-lg-8">
    <span class="brand-label">{{ brand }}</span>
    <div class="row">
        <div class="col-lg-7">
          <h3  class="no-transform">{{ product.translate(app.request.locale).name|default(product.name) }}</h3>
          <p>{{ product.translate(app.request.locale).shortDescription|default(product.shortDescription)|raw }}</p>
          <h4 class="title"><span class="text"></span></h4>
          {% include 'AppSyliusWebBundle:Frontend/Product:_descriptionSwitch.html.twig' %} 
          
           
        </div>
        <div class="col-lg-5">
          <div class="well panel panel-default">
            <p class="lead  pull-right">{{ 'italica.product.free.delivery'|trans }}</p>
            <div class="lead pull-left">
            {% if product.rrp > product.price %}
                <p><s>{{ 'italica.rrp'|trans({}, 'messages') }}: <span>{{product.rrp|sylius_price }}</span></s></p>
            <p class="text-uppercase">{{ 'italica.shop.price'|trans({}, 'messages') }}: <span class="text-danger"><b>{{product.price|sylius_price }} <small>(incl. VAT)</small></b></span></p>
            {% else %}
                <p class="text-uppercase">{{ 'italica.shop.price'|trans({}, 'messages') }}: <span class="text-danger"><b>{{ sylius_calculate_price(product.masterVariant)|sylius_price }} <small>(incl. VAT)</small></b></span> </p>
            {% endif %}
            </div>
            <div style="clear:both;"></div>
            <form action="{{ path('sylius_cart_item_add', {'id': product.id}) }}" method="post" class="clearfix form-horizontal">
              <fieldset>  
                {% include 'AppSyliusWebBundle:Frontend/Product:_variantOption.html.twig' %} 
              </fieldset>
              <input type="hidden" id="product-slug" name="product-slug" value="{{ product.slug }}" />
              <input type="hidden" id="locale" name="locale" value="{{ app.request.locale }}" />
            </form>
          </div> 
            <div class="panel panel-default">
                <div class="panel-body">
                <span class="text-uppercase"><strong>{{ 'italica.share'|trans({}, 'messages') }}: </strong></span>
                <span class='st_facebook'></span>
                <span class='st_twitter'></span>
                <span class='st_pinterest' ></span>
                <span class='st_vkontakte'></span>
                <span class='st_googleplus'></span>
                <span class='st_email'></span>
                </div>
            </div>
               
        </div>
      </div>           
    </div>
  </div>
{{ render(controller( 'AppSyliusProductBundle:Product:getLastVisited', {'request': app.request} )) }}
<p>&nbsp;</p>
{% endblock %}


{% block javascripts %}
<script>
    $(document).ready(function(){  
        $("#sylius_cart_item_variant_leter-size > option").each(function() {
            $("#sylius_cart_item_variant_leter-size option[value="+this.value+"]").attr('disabled', 'disabled');
        });
        {% for variant in product.getVariants() %}
            {% if variant.isAvailableOnDemand() %}
                {% for option in variant.getOptions() %}
                    {% if option.presentation == 'Size' %}
                        $('#sylius_cart_item_variant_leter-size option').filter(function () { return $(this).html() == "{{option.value}}"; }).removeAttr('disabled');
                    {% endif %}
                {% endfor %}
            {% elseif variant.isInStock() %}
                {% for option in variant.getOptions() %}
                    {% if option.presentation == 'Size' %}
                        $('#sylius_cart_item_variant_leter-size option').filter(function () { return $(this).html() == "{{option.value}}"; }).removeAttr('disabled');
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    });
</script>
{% endblock %}
