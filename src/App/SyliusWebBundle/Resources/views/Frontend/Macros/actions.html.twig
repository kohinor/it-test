{% macro create() %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-ok"></i> {{ 'sylius.create'|trans }}</button>
    <a href="{{ app.request.headers.get('referer') }}" class="btn"><i class="fa fa-remove"></i> {{ 'sylius.cancel'|trans }}</a>
</div>
{% endmacro %}

{% macro update() %}
<div class="form-actions">
    <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-save"></i> {{ 'sylius.save_changes'|trans }}</button>
    <a href="{{ app.request.headers.get('referer') }}" class="btn"><i class="fa fa-remove"></i> {{ 'sylius.cancel'|trans }}</a>
</div>
{% endmacro %}
