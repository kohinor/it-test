{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block breadcrumbs %}
<ul class="breadcrumb"></ul>
{% endblock %}
{% block body %}

<div class="row">
  <div class="col-lg-5 col-md-5 col-sm-5">
   {{ sonata_block_render({'name': '/cms/blocks/women_banner'}) }}
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 text-center" >
      <div >
          <div>
              <a href="{{ path('app_solr_search_brand', {'brand':'calvin-klein'}) }}">
              <img src="/img/calvin-klein-logo.png"  class="img-responsive" alt="Calvin Klein">
              </a>
          </div>
          <div>
              <a href="{{ path('app_solr_search_brand', {'brand':'michael-kors'}) }}">
              <img src="/img/michael-kors-logo.png" class="img-responsive" alt="Michael Kors">
              </a>
          </div>
      <div>
          <a href="{{ path('app_solr_search_brand', {'brand':'gucci'}) }}">
          <img src="/img/gucci-logo.png" class="img-responsive" alt="Gucci">
          </a>
      </div>
      <div>
          <a href="{{ path('app_solr_search_brand', {'brand':'versace'}) }}">
          <img src="/img/versace-logo.png" class="img-responsive" alt="Versace">
          </a>
      </div><br>
      <div >
          <div class="panel-body">
              <a href="{{ path('app_site_brand') }}"><strong>{{ 'italica.more'|trans }} </strong> <i class="fa fa-arrow-right"></i></a>
          </div>
      </div>
      </div>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-5">
   
  </div>
</div>
<div class="row">
    <div class="col-lg-12">
    <h4 class="title"><span class="text">{{ 'italica.new.arrivals.women'|trans({}, 'messages') }}</span></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'women',
        'limit':4 } )) }}
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        
    </div>
</div>
<div class="row" style="margin-top: 25px;">
    <div class="col-lg-12" >
    <h4 class="title"><span class="text">{{ 'italica.new.arrivals.men'|trans({}, 'messages') }}</span></h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
         
    </div>
    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'men',
        'limit':4 } )) }}
    </div>
    
</div>
{% endblock %}
