{% extends 'SyliusWebBundle:Frontend:layout.html.twig' %}

{% block breadcrumbs %}
<ul class="breadcrumb"></ul>
{% endblock %}
{% block body %}

<div class="row">
  <div class="col-lg-5 col-md-5 col-sm-5">
   {{ render(controller('KitpagesCmsBundle:Block:widget', {'slug': app.request.locale|default('en') ~ '-right-banner', 'authorizedBlockTemplateList': ['image']} )) }} 
  </div>
  <div class="col-lg-2 col-md-2 col-sm-2 text-center" >
      <div >
          <div>
              <a href="{{ path('app_solr_search_brand', {'brand':'calvin_klein'}) }}">
              <img src="/img/calvin-klein-logo.png" width="150px">
              </a>
          </div>
          <div>
              <a href="{{ path('app_solr_search_brand', {'brand':'michael_kors'}) }}">
              <img src="/img/michael-kors-logo.png" width="150px">
              </a>
          </div>
      <div>
          <a href="{{ path('app_solr_search_brand', {'brand':'gucci'}) }}">
          <img src="/img/gucci-logo.png" width="140px">
          </a>
      </div>
      <div>
          <a href="{{ path('app_solr_search_brand', {'brand':'versace'}) }}">
          <img src="/img/versace-logo.png" width="130px">
          </a>
      </div><br>
      <div >
          <div class="panel-body">
              <a href="{{ path('app_site_brand') }}"><strong>{{ 'italica.more'|trans }} </strong> <i class="fa fa-arrow-right"></i></a>
          </div>
      </div>
      </div>
  </div>
  <div class="col-lg-5 col-md-5 col-sm-5">
   {{ render(controller('KitpagesCmsBundle:Block:widget', {'slug': app.request.locale|default('en') ~ '-left-banner', 'authorizedBlockTemplateList': ['image']} )) }}             
  </div>
</div>
<div class="row">
    <div class="col-lg-12">
    <h4 class="title"><span class="text">{{ 'italica.new.arrivals.women'|trans({}, 'messages') }}</span></h4>
    </div>
    <div class="col-lg-9">
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'women',
        'limit':4 } )) }}
    </div>
    <div class="col-lg-3">
        {{ render(controller( 'KitpagesCmsBundle:Nav:widget', {
            'slug': app.request.locale|default('en') ~ '-new-in-women',
            'cssClass': "text-center promo-nav",
            'currentPageSlug':kitCmsPage.slug|default(''),
            'startDepth':1 ,
            'endDepth':1} )) }}
    </div>
</div>
<div class="row" style="margin-top: 25px;">
    <div class="col-lg-12" >
    <h4 class="title"><span class="text">{{ 'italica.new.arrivals.men'|trans({}, 'messages') }}</span></h4>
    </div>
    <div class="col-lg-3">
          {{ render(controller( 'KitpagesCmsBundle:Nav:widget', {
            'slug': app.request.locale|default('en') ~ '-new-in-men',
            'cssClass': "text-center promo-nav",
            'currentPageSlug':kitCmsPage.slug|default(''),
            'startDepth':1 ,
            'endDepth':1} )) }}
    </div>
    <div class="col-lg-9">
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'men',
        'limit':4 } )) }}
    </div>
    
</div>
{% endblock %}
