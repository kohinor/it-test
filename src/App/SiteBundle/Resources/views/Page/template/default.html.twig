{% extends 'KitpagesCmsBundle:Page:layout.html.twig' %}
{% block breadcrumbs %}
<ul class="breadcrumb">
    <li>{{ 'italica.you.are.here'|trans({}, 'messages') }}: </li>
    <li><a href="/{{ app.request.locale }}">{{ 'italica.home'|trans({}, 'messages') }}</a> </li>
    <li>{{ kitCmsPageData.page.title }} </li>
</ul>
{% endblock %}
{% block body %}
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-3">
        {{ render(controller( 'KitpagesCmsBundle:Nav:widget', {
            'slug': app.request.locale|default('en') ~ '-footer',
            'cssClass': "nav-pills nav-stacked",
            'currentPageSlug':kitCmsPage.slug|default('')} )) }}
    </div>
    <div class="col-lg-9 col-md-9 col-sm-9">        
        {{ render(controller('KitpagesCmsBundle:Page:widgetZone', {'location_in_page': 'main', 'page':kitCmsPage})) }}             

    </div>
</div>
<div style="clear:both;"></div>
{% endblock body %}
