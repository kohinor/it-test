{% extends 'KitpagesCmsBundle:Page:layout.html.twig' %}

{% block body %}
<div class="row">
  <div class="column grid-6 home-banner">
   {{ render(controller('KitpagesCmsBundle:Block:widget', {'slug': app.request.locale|default('en') ~ '-right-banner', 'authorizedBlockTemplateList': ['image']} )) }} 
  </div>
  <div class="column grid-6 home-banner">
   {{ render(controller('KitpagesCmsBundle:Block:widget', {'slug': app.request.locale|default('en') ~ '-left-banner', 'authorizedBlockTemplateList': ['image']} )) }}             
  </div>
</div>
<div class="row">
    <div class="brand-slider">
        <div><h2>Prada</h2></div>
        <div><h2>Gucci</h2></div>
        <div><h2>Valentino</h2></div>
        <div><h2>Roxy</h2></div>
        <div><h2>Rip Curl</h2></div>
        <div><h2>Coast</h2></div>
        <div><h2>Hobbs</h2></div>
        <div><h2>Burberry</h2></div>
    </div>
</div>
<div class="row">
    <div class="column grid-6">
    <div class="new-in-link" style="clear:both;"><a href="{{ path('app_solr_search_gender_promotion', {'gender':'women', 'promotion':'new in'}) }}">New Arrivals for Women</a></div>
    
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'women',
        'limit':6 } )) }}
    </div>
    <div class="column grid-6">
    <div class="new-in-link" style="clear:both;"><a href="{{ path('app_solr_search_gender_promotion', {'gender':'men', 'promotion':'new in'}) }}">New Arrivals for Men</a></div>
    
    {{ render(controller( 'AppSolrSearchBundle:SolrSearch:searchNewIn', {
        'request': app.request,
        'gender':'men',
        'limit':6 } )) }}
    </div>
    
</div>
{% endblock body %}
