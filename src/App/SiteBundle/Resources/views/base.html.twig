<!doctype html>
{% set settings = sylius_settings_all('general') %}
<!--[if lt IE 7 ]> <html class="no-js ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js" lang="{{ app.request.locale }}"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <title>
    {% block title %}
        {{ settings.title|default('sylius.meta.frontend_title'|trans) }}
    {% endblock %}</title>
    <meta name="description" content="{{ settings.meta_description|default("") }}{% block description %}{% endblock %}">
    <meta name="keywords" content="{{ settings.meta_keywords|default("") }}{% block keywords %}{% endblock %}">
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}">     
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="/css/bootstrap.css" type="text/css" />

    <link rel="stylesheet" type="text/css" href="/css/ion.rangeSlider.skinNice.css"/>
    <link rel="stylesheet" type="text/css" href="/css/ion.rangeSlider.css"/>
            
    {% block stylesheets %}{% endblock %}
</head>

<body>
  <header class="header-box navbar navbar-static-top">
      <div class="container">
        <div id="navbar-main">
          <div class="col-lg-3 col-md-3 col-sm-3">
            <ul class="nav nav-pills">
            {% if app.user %}
                <li> <a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user"></i> {{ 'italica.account'|trans({}, 'messages') }}</a> </li>
                <li> <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i> {{ 'italica.logout'|trans({}, 'messages') }}</a></li>
              {% else %}
                <li> <a href="{{ path('fos_user_security_login', {'_target_path': app.request.requestUri} ) }}"><i class="fa fa-sign-in"></i> {{ 'italica.login'|trans({}, 'messages') }}</a></li>
                <li> <a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user"></i> {{ 'italica.register'|trans({}, 'messages') }}</a></li>
              {% endif %}
            </ul>
          </div>
          <div class="col-lg-6 col-md-6 col-sm-6">
            <form action="{{ url('app_solr_search', {'_locale': app.request.locale})}}" class="navbar-form" style="padding-top:2px">
              <div class="input-group col-lg-9">
                <input class="form-control  input-sm" name="term" placeholder="{{ 'find.product'|trans }}" type="text">
              <span class="input-group-btn"><button class="btn btn-default btn-sm" title="Go" type="submit"><i class="fa fa-search"></i></button></span>
            </div>
            </form>
          </div>
          <div class="col-lg-3 col-md-3 col-sm-3">
              {{ knp_menu_render('sylius.frontend.locale', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}
          </div>        
        </div>
      </div>
  </header>
          <div class="header-box">
              <div class="container">
                  <div class="col-lg-4 col-md-4 col-sm-4 text-center text-uppercase">
                  
                  </div>
                      
                  <div class="col-lg-4 col-md-4 col-sm-4 text-center text-uppercase">
                      <span style="padding:10px; display:block;letter-spacing: 1px;"> {{ 'italica.free.delivery.return'|trans|raw }} </span>
                  </div>
                  <div class="col-lg-4 col-md-4 col-sm-4">
                  
                  </div>
              </div>
          </div>              
    <div class="page-header" >
      <div class="container">   
        <div class="row" >
          <div class="col-lg-4 col-md-4 col-sm-4 .hidden-xs">
            <div class="row">
            <h5 class="text-center  text-uppercase" >{{ 'welcome.message'|trans }}</h5>
            </div>
            <div class="row text-center">
            <div class="fb-share-button" data-href="http://shopitalica.ch" data-layout="button_count"></div>
            </div>
          </div>
          <div class="col-lg-4 col-md-4 col-sm-4 text-center" style='margin-bottom:0px;'>
            <h1 class="text-uppercase text-danger" style="margin-bottom:0px;letter-spacing: 3px;"><a href="/{{ app.request.locale }}/" title="" rel="home">Italica</a></h1>
            <p class="lead text-uppercase" style="letter-spacing: 1px;">{{ 'italica.online.outlet.shop'|trans({}, 'messages') }}</p>
          </div>
          <div class="col-lg-4 col-sm-4 col-md-4">
            {{ knp_menu_render('sylius.frontend.main', {'template': 'SyliusWebBundle:Frontend:menu.html.twig'}) }}   
          </div>
        </div>
        <div class="row">
          <div class="navbar navbar-default" style="border-color: rgb(68, 68, 68);
            border-left: 0 none;
            border-radius: 0;
            border-right: 0 none;
            border-width: 0 0 3px;
            ">
              <div class="col-lg-12 col-md-12 col-sm-12">
              <div class="nav navbar-default" style="padding:0px;">
                  <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                    </button>
                  </div>
                  <nav>
                  <div class="navbar-collapse collapse navbar-responsive-collapse">

                  </div>
                  </nav>
              </div>
              </div>
            </div>
          </div>
        <div class="row">
          {% block breadcrumbs %}{% endblock %}
        </div>
        </div>
  </div>
        
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog"  aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        {% block overlay %}{% endblock %}
      </div>
    </div>
  </div> 
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
      {% block flashes %}
        {% for type in ['success', 'error', 'fos_user_success'] %}
          {% for flash in app.session.flashbag.get(type) %}
            <div class="alert alert-{{ type == 'fos_user_success' ? 'success' : type == 'error' ? 'danger' : type == 'notice' ? 'warning' : type }}">
              <a class="close" data-dismiss="alert" href="#">×</a>
              {{ flash|trans }}
            </div>
          {% endfor %}
        {% endfor %}
      {% endblock %}
      </div>
    </div>
    {% block body %}{% endblock %}
  </div>   
  <div class="footer-separator"></div>
  <footer>
  <div class="page-footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 col-md-5 col-sm-5">
          <div id="nav-foot">
            

          </div>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-3 " style="border-right: 1px dashed #d1d1d1;border-left: 1px dashed #d1d1d1;">
          <div class="row">
            <div class="col-lg-12 text-center">
            
            <h4 class="text-left">{{ 'italica.follow.us'|trans }}</h4> 
            <ul class="nav nav-pills">
            <li><a href="#" style="padding:3px;"><img class="thumbnail" height="35" src="/img/fb.png"  alt="Facebook" /></a></li>
            <li><a href="#" style="padding:3px;"><img class="thumbnail" height="35" src="/img/twitter.png"  alt="Twitter" /></a></li>
            <li><a href="#" style="padding:3px;"><img class="thumbnail" height="35" src="/img/in.png"  alt="LinkedIn" /></a></li>
            </ul>
            </div>
          </div>
          <hr />
          <div>
            <h4>{{ 'italica.contact.us'|trans }}</h4>
            <p>{{ 'italica.email'|trans }}</p>
          </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4">
          
          <div id="newsletters">
            {{ render(controller('AppSiteBundle:Site:subscription',{
            'url': app.request.uri})) }}
          </div>
          <hr />
          <div>
            <h4>{{ 'italica.we.accept'|trans }}</h4>
            <img src="/img/postfinance-logo.png" height="30" alt="Postfinance" />&nbsp;&nbsp;
            <img src="/img/mastercard-logo.png" height="30" alt="Mastercard" />&nbsp;&nbsp;
            <img src="/img/visa-logo.png" height="25" alt="Visa" />&nbsp;&nbsp;
            <img src="/img/paypal-logo.png" height="30" alt="Paypal" />
          </div>
        </div>
      </div>
    <div class="row text-center">
      <p class="col-lg-12"><br/>© 2014 Italica </p>
    </div>
  </div>
</div>           
  </footer>       
<div id="cookie-div" class="nav navbar-default navbar-fixed-bottom text-center panel-default panel" style="display:none">
    <div class="row" style="padding-top:15px;">
        <div class="col-lg-9">
        <p>
            {{ 'app.site.cookie.message'|trans|raw }} <a href="/{{ app.request.locale }}/privacy-policy">{{ 'app.site.cookie.link'|trans }}</a>.
            </p>
        </div>
        <div class="col-lg-3">
            <button class="btn btn-danger acceptCookie">{{ 'italica.accept'|trans }}</button>
        </div>
   </div>     
</div>
