{% autoescape false %}
{% set img = data.media.mainImage.0.default|default('') %}
<div class="home-banner-image">
{% if img %}
    {% if data.root.block_url|default('') %}<a href="{{data.root.block_url}}">{% endif %}
    <img src="{{img.url}}" />
    {% if data.root.block_url|default('') %}</a>{% endif %}
{% endif %}
{% if data.root.title|default('') %}
    <div class="home-banner-link">
    {% if data.root.block_url|default('') %}<a href="{{data.root.block_url}}">{% endif %}
    {% if data.root.title|default('') %}{{data.root.title}}{% endif %}
    {% if data.root.block_url|default('') %}</a>{% endif %}
    </div>
{% endif %}
</div>
{% endautoescape %}
